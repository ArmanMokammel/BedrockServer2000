<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
  <appSettings>
    <add key="autoStartServer" value="false"/> <!--autoStartServer is a boolean value to specify whether or not to start the server when the program starts up [default: false]-->

	<add key="autoBackupOnDate" value="false"/> <!--autoBackupOnDate is a boolean value to specify whether or not to automatically run a backup every {autoBackupOnDate_Time} [default: false]-->
    <add key="autoBackupOnDate_Time" value="00:00:00"/> <!--autoBackupOnDate_Time is a time value for autoBackupOnDate to specify when to run an automatic backup [default: 00:00:00]-->
	  
	<add key="autoBackupEveryX" value="false"/> <!--autoBackupEveryX is a boolean value to specify whether or not to automatically run a backup every {autoBackupEveryXDuration} {autoBackupEveryXTimeUnit} [default: false]-->
	<add key="autoBackupEveryXDuration" value="1"/> <!--autoBackupEveryXDuration is an integer value to specify the duration between each auto backup [default: 1]-->
	<add key="autoBackupEveryXTimeUnit" value="hour"/> <!--autoBackupEveryXTime is a string value to specify the time unit for autoBackupEveryXDuration, accepted values are "minute" or "hour" [default: hour]-->

	<add key="worldPath" value=""/> <!--worldPath is a string value to specify the directory where the world folder is stored, usually "\worlds\{worldName}", leave empty to use the first directory in "\worlds"-->
    <add key="backupPath" value=""/> <!--backupPath is a string value to specify the directory to store world backups, the program will not perform a backup if this key is empty-->
    <add key="backupLimit" value="32"/> <!--backupLimit is an integer value to specify how many backups can be stored before deletintg the oldest one to leave space for more backups [default: 32]-->
    </appSettings>
</configuration>
